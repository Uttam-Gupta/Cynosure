<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_weight="1"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="fill_parent" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/backfinal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/eventco"
            android:layout_marginBottom="560dp"
            android:id="@+id/imageView" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name3_btn"
        android:layout_marginStart="20dp"
        android:textSize="30sp"

        android:textColor="#ffffff"
        android:layout_marginTop="90dp"
        android:id="@+id/text_view1" />

    <Button
        android:background="@drawable/call"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:textSize="20sp"
        android:id="@+id/btn1"


        android:layout_alignBottom="@+id/text_view1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name1_btn"
        android:textSize="30sp"

        android:textColor="#ffffff"
        android:layout_marginTop="180dp"
       android:id="@+id/text_view2" />

        <Button
            android:background="@drawable/call"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:textSize="20sp"
        android:id="@+id/btn2"
            android:layout_gravity="end"
            android:layout_alignBottom="@+id/text_view2"
            android:layout_alignLeft="@+id/btn1"
            android:layout_alignStart="@+id/btn1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:background="@drawable/locate"
        android:id="@+id/button2"
        android:layout_above="@+id/button4"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="100dp"
android:background="@drawable/visitus"

        android:id="@+id/button4"
        android:layout_above="@+id/button3" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/facebook"
        android:id="@+id/button3"
        android:layout_below="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </ScrollView>